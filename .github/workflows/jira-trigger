name: Jira Issue Handler

on:
  repository_dispatch:
    types: [jira-event]

jobs:
  create-issue:
    runs-on: ubuntu-latest
    steps:
      - name: Create GitHub Issue from Jira
        run: |
          echo '${{ secrets.JIRA_USER_MAPPING }}' > mapping.json
          JIRA_EMAIL="${{ github.event.client_payload.reporter_email }}"
          ASSIGNEE=$(jq -r --arg email "$JIRA_EMAIL" '.[$email]' mapping.json)
          
          curl -X POST \
            -H "Authorization: token ${{ secrets.GITHUB_TOKEN }}" \
            -H "Accept: application/vnd.github.v3+json" \
            https://api.github.com/repos/shriyanshacoustte/test/issues \
            -d "{\"title\":\"${{ github.event.client_payload.title }}\",\"body\":\"Linked Jira issue: ${{ github.event.client_payload.issue_url }}\",\"assignees\":[\"$ASSIGNEE\"]}"
